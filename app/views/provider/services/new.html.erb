<%= form_with(model: [:provider, @service], data: {turbo: false}) do |f| %>
    <fieldset>
        <%= f.label :title %>
        <%= f.text_field :title %>
    </fieldset>
    <fieldset>
        <%= f.label :about %>
        <%= f.text_area :about %>
    </fieldset>
        <fieldset class="mb-2">
        <%= f.label :cover_image %>
        <%= f.file_field :cover_image %>
    </fieldset>
    <fieldset>
        <%= f.submit class: 'btn btn-primary btn-sm' %>
    </fieldset>
<% end %>

