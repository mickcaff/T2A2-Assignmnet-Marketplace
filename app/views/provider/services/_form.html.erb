<%= form_with(model: [:provider, @service], data: {turbo: false}) do |f| %>
    <fieldset>
        <%= f.label :title %>
        <%= f.text_field :title %>
    </fieldset>
    <fieldset>
        <%= f.label :about %>
        <%= f.text_area :about %>
    </fieldset>
    <fieldset>
        <%= f.label :price %>
        <%= f.text_field :price %>
    </fieldset>
    <fieldset>
        <%= f.label :price_unit %>
        <%= f.select :price_unit, ["", "per ha", "per km"] %>
    </fieldset>
    <fieldset>
        <%= f.label :additional_charges %>
        <%= f.text_field :additional_charges %>
    </fieldset>
    <fieldset>
        <%= f.submit %>
    </fieldset>
<% end %>
